{
  "name": "locore",
  "displayName": "LoCoRe",
  "description": "Local Code Review extension for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
    "contributes": {
      "commands": [
        {
          "command": "locore.openCodeReview",
          "title": "Open CodeReview",
          "category": "LoCoRe"
        },
        {
          "command": "locore.createReview",
          "title": "Create Review",
          "category": "LoCoRe",
          "enablement": "!commentIsEmpty"
        },
        {
          "command": "locore.replyReview",
          "title": "Reply",
          "category": "LoCoRe",
          "enablement": "!commentIsEmpty"
        },
        {
          "command": "locore.resolveThread",
          "title": "Resolve Thread",
          "category": "LoCoRe"
        },
        {
          "command": "locore.reopenThread",
          "title": "Reopen Thread",
          "category": "LoCoRe"
        }
      ],
      "menus": {
        "comments/commentThread/context": [
          {
            "command": "locore.createReview",
            "group": "inline",
            "when": "commentController == locore-comments && commentThreadIsEmpty"
          },
          {
            "command": "locore.replyReview",
            "group": "inline",
            "when": "commentController == locore-comments && !commentThreadIsEmpty"
          },
          {
            "command": "locore.resolveThread",
            "group": "navigation@99",
            "when": "commentController == locore-comments && commentThread == locore:unresolved"
          },
          {
            "command": "locore.reopenThread",
            "group": "navigation@99",
            "when": "commentController == locore-comments && commentThread == locore:resolved"
          }
        ]
      }
    },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "lowdb": "^5.1.0"
  }
}
